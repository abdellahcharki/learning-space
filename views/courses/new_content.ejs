<%- include("../components/header.ejs") %>
    <%- include("../components/navbar.ejs") %>
        <style>
            .ce-block__content,
            .ce-toolbar__content {
                max-width: unset;

            }

            #editor {
                padding: 20px 60px;
            }
        </style>

        <section class="container">
            <div class="row">
                <form  method="post" action="/courses/content"  class="col-12">
                    <h2 class="mt-3">New Cours</h2>
                    <button   class="btn act-btn float-end">Publish</button>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home    "></i></a></li>
                            <li class="breadcrumb-item"><a href="/courses">Courses</a></li>
                            <li class="breadcrumb-item active" aria-current="page">new</li>
                        </ol>
                    </nav>
                    <hr>
                    <div class="form-group content-title">
                        <label for="">Titel</label>
                        <input type="text" class="form-control" name="title" id="" aria-describedby="emailHelpId"
                            placeholder="here title">
                            <input type="hidden" id="body" name="body">
                            <input type="hidden" name="cours_id" value="<%= cours_id%>">

                    </div>
                </form>

                <div class="col-12">
                    <div id="editor"></div>
                </div>


            </div>
        </section>



        <%- include("../components/editor.ejs") %>


        <%- include("../components/footer.ejs") %>


            <script>


                const editor = new EditorJS({
                    holder: "editor",
                    placeholder: 'Let`s write an awesome story!',
                    tools: editorTools ,
                    onChange: (api, event) => {
                        editor.save().then((data) => {
                        document.getElementById("body").value = String(JSON.stringify(data))  ;
                      
                    })

                        }
                });

               

            


            </script>