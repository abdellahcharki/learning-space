<%- include("../components/header.ejs") %>
<%- include("../components/navbar.ejs") %>
    <section  class="container">
        <form method="post" enctype='multipart/form-data' action="/courses" class="row">
            <div class="col-12">
                <h2 class="mt-3" id="ccc">New Cours</h2>
                <button id="pub" class="btn act-btn float-end">Post</button>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="#">Courses</a></li>
                      <li class="breadcrumb-item active" aria-current="page">new</li>
                    </ol>
                  </nav>
                  <hr>
            </div> 
            <div class="col-3 offset-4">
                <div class="card cours-card">
                    <img class="card-img-top" src="https://placehold.co/700x400" id="cours_img_prev" alt="">
                    <div class="card-body">
                        <h4 class="card-title" id="cours_name_prev">Title</h4>
                    </div>
                </div>
            </div>


            
            <div class="col-12">
                <form action="">
                    <div class="form-group">
                        <label for="">Cours Name</label>
                        <input type="text" class="form-control" name="corsname" id="cours_name_input" aria-describedby="emailHelpId" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="">Cours image</label>
                        <input type="file" class="form-control" name="coursimg" id="cours_img_input" aria-describedby="emailHelpId" placeholder="">
                    </div>
                </form>
            </div>

            
        </form>
    </section>



        <script>
            document.getElementById("cours_name_input").addEventListener("keyup",(e)=>{
                document.getElementById("cours_name_prev").innerText = e.target.value;
                document.getElementById("ccc").innerText = e.target.value;
            })


            document.getElementById("cours_img_input").addEventListener("change",(e)=>{
               document.getElementById("cours_img_prev").src = window.URL.createObjectURL(e.target.files[0])
            })
            
        </script>
        
 
